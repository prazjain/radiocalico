<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'My Website' %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <div class="nav-container">
            <h1><a href="/">My Website</a></h1>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/users">Users</a></li>
                <li><a href="/user/add">Add User</a></li>
                <li><a href="/post/add">Add Post</a></li>
            </ul>
        </div>
    </nav>

    <main>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="flash-messages">
                <div class="flash flash-error"><%= error %></div>
            </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="flash-messages">
                <div class="flash flash-success"><%= success %></div>
            </div>
        <% } %>

        <%- body %>
    </main>

    <footer>
        <p>&copy; 2024 My Website - Node.js Frontend + Python Backend</p>
    </footer>

    <% if (typeof scripts !== 'undefined') { %>
        <%- scripts %>
    <% } %>
</body>
</html>
